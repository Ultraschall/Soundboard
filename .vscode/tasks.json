{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "linux": {
                "options": {
                    "env": {
                        "CC": "/usr/bin/clang",
                        "CXX": "/usr/bin/clang++"
                    }
                }
            },
            "label": "CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_CXX_CLANG_TIDY=\"/usr/bin/clang-tidy;-checks=*,-fuchsia*,-clang-analyzer-alpha.*,-llvm-include-order\"",
                "-G",
                "Ninja",
                ".."
            ],
            "options": {
                "cwd": "${workspaceFolder}/.build"
            },
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "ninja",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/.build"
            },
            "problemMatcher": [
                {
                    "owner": "cpp",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                }
            ]
        }
    ]
}